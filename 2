#include<conio.h>
#include<string>
#include<iostream>
#include<cmath>

using namespace std;

int main()
{
	float Hour, BillA, BillB;
	string x, a, b, c;
	
	cout << "Please indicate which package you are using" << endl;
	cout << "A, B, or C" << endl;
	cin>> x;
	cout << "Indicate your usage in hours" << endl;
	cin >> Hour;
		
	BillA = ( Hour * 20 ) + 995; 
	BillB = ( Hour * 10) + 1495;
				
	{
	if (x==a)
	
	
	cout << BillA<<"/"<<"month" << endl;
	
	else if (x==b)
	
	cout << BillB<<"/"<<"month" << endl;
	
	else if (x==c)
	
	cout << "1995/month, no additional fees for extra hours" << endl;
	
	else
	
	cout << "Invalid" << endl;
	
	return 0;
	}
}
